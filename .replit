modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rebuild-dev"

[[workflows.workflow]]
name = "Next.js Dev"
author = 44785901
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd rebuild/source && npm run dev"

[[workflows.workflow]]
name = "Run Next.js"
author = 44785901
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd rebuild/source && npm run dev"

[[workflows.workflow]]
name = "rebuild-dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd rebuild/source && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33165
externalPort = 3000

[[ports]]
localPort = 45237
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "server.py"]
